<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Evaluacion3PDV.ViewModels"
             x:Class="Evaluacion3PDV.Views.PopularPaintingsPage">

    <ContentPage.BindingContext>
        <local:DVPopularPaintingsViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding Paintings}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Title}" FontSize="Medium" />
                            <Image Source="{Binding Image}" HeightRequest="200" />
                            <Button Text="Save" Command="{Binding Path=BindingContext.SavePaintingCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
